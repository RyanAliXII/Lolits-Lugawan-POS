<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:gravity="center_vertical|center_horizontal"
    >
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in_text"
        android:layout_gravity="center"

        >

    </TextView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email_text_label"
        android:labelFor="@+id/emailTextBox"

        >

    </TextView>

    <EditText
        android:id="@+id/emailTextBox"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress"
        android:textColorHint="#757575">

    </EditText>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/password_text_label"
        android:labelFor="@+id/passwordTextBox"

        >

    </TextView>

    <EditText
        android:id="@+id/passwordTextBox"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:autofillHints="password"
        android:inputType="textPassword"
        android:textColorHint="#757575"></EditText>
    <Button
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:id="@+id/signInButton"
        android:text="@string/sign_in_text"
        >

    </Button>

  </LinearLayout>

</LinearLayout>
